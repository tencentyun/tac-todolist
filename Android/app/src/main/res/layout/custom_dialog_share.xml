<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F1F1F1"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/btn_share1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="23dp"
        android:layout_weight="1"
        android:src="@drawable/ic_tac_share_wechat_session"
        app:layout_constraintEnd_toStartOf="@+id/btn_share2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btn_share2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_tac_share_wechat_timeline"
        app:layout_constraintEnd_toStartOf="@+id/btn_share3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@+id/btn_share1"
        app:layout_constraintTop_toTopOf="@+id/btn_share1" />

    <ImageView
        android:id="@+id/btn_share3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_tac_share_qq"
        app:layout_constraintEnd_toStartOf="@+id/btn_share4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@+id/btn_share2"
        app:layout_constraintTop_toTopOf="@+id/btn_share2" />

    <ImageView
        android:id="@+id/btn_share4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:src="@drawable/ic_tac_share_qzone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_share3"
        app:layout_constraintTop_toTopOf="@+id/btn_share3" />

    <ImageView
        android:id="@+id/btn_share5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_tac_share_weibo"
        app:layout_constraintEnd_toStartOf="@+id/btn_share2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_share1"
        app:layout_constraintTop_toBottomOf="@+id/label_share1" />

    <ImageView
        android:id="@+id/btn_share6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_tac_share_others"
        app:layout_constraintEnd_toStartOf="@+id/btn_share3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_share2"
        app:layout_constraintTop_toTopOf="@+id/btn_share5" />

    <TextView
        android:id="@+id/label_share1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/tac_share_wechat_session"
        android:textColor="#878787"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_share2"
        app:layout_constraintStart_toStartOf="@+id/btn_share1"
        app:layout_constraintTop_toBottomOf="@+id/btn_share1" />

    <TextView
        android:id="@+id/label_share2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/tac_share_wechat_timeline"
        android:textColor="#878787"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_share3"
        app:layout_constraintStart_toStartOf="@+id/btn_share2"
        app:layout_constraintTop_toBottomOf="@+id/btn_share2" />

    <TextView
        android:id="@+id/label_share3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/tac_share_qq"
        android:textColor="#878787"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_share4"
        app:layout_constraintStart_toStartOf="@+id/btn_share3"
        app:layout_constraintTop_toBottomOf="@+id/btn_share3" />

    <TextView
        android:id="@+id/label_share4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/tac_share_qzone"
        android:textColor="#878787"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_share4"
        app:layout_constraintStart_toStartOf="@+id/btn_share4"
        app:layout_constraintTop_toBottomOf="@+id/btn_share4" />

    <TextView
        android:id="@+id/label_share5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/tac_share_weibo"
        android:textColor="#878787"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_share6"
        app:layout_constraintStart_toStartOf="@+id/btn_share5"
        app:layout_constraintTop_toBottomOf="@+id/btn_share5" />

    <TextView
        android:id="@+id/label_share6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/tac_share_others"
        android:textColor="#878787"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_share6"
        app:layout_constraintStart_toStartOf="@+id/btn_share6"
        app:layout_constraintTop_toBottomOf="@+id/btn_share6" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="label_share1,label_share5" />

    <TextView
        android:id="@+id/btn_cancel"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:text="@string/tac_share_cancel"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/barrier2" />

</androidx.constraintlayout.widget.ConstraintLayout>
